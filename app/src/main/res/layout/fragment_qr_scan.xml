<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Sartor.Scan"
    tools:context=".ui.fragments.search.QRScanFragment">

    <ImageView
        android:id="@+id/tl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toTopOf="@id/bl"
        android:src="@drawable/ic_leftqrtop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tr"
        app:layout_constraintBottom_toTopOf="@id/br"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ic_rightqrtop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/tl"
        android:src="@drawable/ic_leftqr"
        app:layout_constraintBottom_toTopOf="@id/ring"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/br"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ic_rightqr"
        app:layout_constraintBottom_toTopOf="@id/ring"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tr" />

    <ImageView
        android:id="@+id/ring"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_colored_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_circle_gray"
        app:layout_constraintBottom_toBottomOf="@id/ring"
        app:layout_constraintEnd_toEndOf="@id/ring"
        app:layout_constraintStart_toStartOf="@id/ring"
        app:layout_constraintTop_toTopOf="@id/ring" />

</androidx.constraintlayout.widget.ConstraintLayout>